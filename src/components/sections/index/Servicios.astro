---
// Sección de servicios educativos

import NivelInicial from "../../../images/index/nivel-inicial.webp";
import NivelPrimaria from "../../../images/index/nivel-primaria.webp";
import NivelSecundaria from "../../../images/index/nivel-secundaria.webp";
import Talleres from "../../../images/index/talleres.webp";
---

<section class="bg-[#f8ffff] py-8 px-6 md:px-6">
	<div class="max-w-6xl mx-auto">
		<h2 class="titulo-subrayado mb-20">¿Qué ofrecemos?</h2>
		<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
			<div class="card">
				<img
					src={NivelInicial.src}
					alt="Nivel Inicial"
					class="card-img"
				/>
				<div class="oferta-educativa">
					Nivel Inicial
					<img
						src="/flecha-derecha-servicios.svg"
						class="w-4 h-4 md:w-6 md:h-6"
					/>
				</div>
			</div>
			<div class="card">
				<img
					src={NivelPrimaria.src}
					alt="Nivel Primaria"
					class="card-img"
				/>
				<div class="oferta-educativa">
					Nivel Primaria
					<img
						src="/flecha-derecha-servicios.svg"
						class="w-4 h-4 md:w-6 md:h-6"
					/>
				</div>
			</div>
			<div class="card">
				<img
					src={NivelSecundaria.src}
					alt="Nivel Secundaria"
					class="card-img"
				/>
				<div class="oferta-educativa">
					Nivel Secundaria
					<img
						src="/flecha-derecha-servicios.svg"
						class="w-4 h-4 md:w-6 md:h-6"
					/>
				</div>
			</div>
			<div class="card">
				<img
					src={Talleres.src}
					alt="Talleres"
					class="card-img"
				/>
				<div class="oferta-educativa">
					Talleres
					<img
						src="/flecha-derecha-servicios.svg"
						class="w-4 h-4 md:w-6 md:h-6"
					/>
				</div>
			</div>
		</div>
	</div>
</section>
