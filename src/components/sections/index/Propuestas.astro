---
// Sección de propuestas

const propuestas = [
	{
		nombre: "Académica",
		imagen: "/propuesta-academica.svg",
		alt: "Propuesta académica",
	},
	{
		nombre: "Pastoral",
		imagen: "/propuesta-pastoral.svg",
		alt: "Propuesta de pastoral",
	},
	{
		nombre: "Tutoría",
		imagen: "/propuesta-tutoria.svg",
		alt: "Propuesta de tutoría",
	},
	{
		nombre: "Administrativa",
		imagen: "/propuesta-administrativa.svg",
		alt: "Propuesta administrativa",
	},
];
---

<div class="max-w-6xl mx-auto px-4 pt-10">
	<!-- Título con padding superior -->
	<h2 class="titulo-subrayado mb-32">¿Cuál es nuestra propuesta?</h2>

	<!-- Cuadrícula con margen inferior -->
	<div
		class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6 mt-8 mb-15"
	>
		{
			propuestas.map(({ nombre, imagen, alt }) => (
				<div class="relative bg-[#7acece] rounded-xl w-full aspect-[1/1] flex flex-col justify-center items-center text-white shadow-md transition-transform transform hover:scale-105">
					<img
						src={imagen}
						alt={alt}
						class="w-24 h-24 mb-4"
					/>
					<span class="text-2xl font-semibold text-[#214A4E]">
						{nombre}
					</span>

					<div class="absolute -bottom-5 w-10 h-10 bg-white rounded-full flex items-center justify-center border border-[#7acece]">
						<span class="text-[#7acece] text-2xl font-bold">+</span>
					</div>
				</div>
			))
		}
	</div>
</div>
