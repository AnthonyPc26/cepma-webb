---
// Sección del profesorado de nivel secundaria
---

<section class="bg-white px-6 md:px-16 mb-10">
	<!-- Título -->
	<h2 class="text-3xl md:text-4xl font-bold text-[#4fafb1] mb-2">
		Nivel Secundaria
	</h2>
	<div class="h-1 bg-[#4fafb1] w-40 mb-8"></div>

	<!-- Tarjetas vacías -->
	<div
		class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6"
	>
		{
			Array.from({ length: 4 }).map(() => (
				<div 
					class="bg-white rounded-xl shadow-md overflow-hidden transform transition duration-300 hover:-translate-y-2 
					active:scale-95 cursor-pointer min-h-[200px]"
				>
					<!-- Franja superior -->
					<div class="bg-[#4fafb1] text-black font-semibold text-center py-3 rounded-t-xl">
						Nombre Apellido
					</div>

					<!-- Contenido -->
					<div class="relative px-4 pt-6 pb-4">
						<!-- Círculo gris superpuesto alineado a la izquierda -->
						<div class="absolute -top-5 left-4 w-10 h-10 rounded-full bg-[#D9D9D9] border-2 border-white shadow-md"></div>
						<!-- Rol -->
						<ul class="text-sm text-black list-disc list-inside mt-4">
							<li>Rol</li>
						</ul>
					</div>
				</div>
			))
		}
	</div>
</section>